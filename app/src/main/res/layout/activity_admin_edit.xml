<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#42aea5">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="70dp"
            android:textSize="15sp" />

        <Button
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="#266661"
            android:textSize="15sp"
            android:id="@+id/adminWriteTest"
            android:layout_marginRight="10dp"
            android:text="미리듣기"
            />
        <Button
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="#266661"
            android:id="@+id/adminWriteSubmit"
            android:textSize="15sp"
            android:text="수정"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제목"
        android:textColor="#215b56"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:orientation="horizontal">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:id="@+id/adminWriteTitle"
            android:textSize="20sp"
            android:background="#ffffff"/>
        <Button
            android:layout_width="70dp"
            android:layout_height="37dp"
            android:layout_weight="0.2"
            android:id="@+id/adminEditSearchBtn"
            android:background="#266661"
            android:textSize="15sp"
            android:text="찾기"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="악기"
        android:textColor="#215b56"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:orientation="horizontal">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:id="@+id/adminWriteInst"
            android:textSize="20sp"
            android:background="#ffffff"/>
        <Button
            android:layout_width="70dp"
            android:layout_height="37dp"
            android:layout_weight="0.2"
            android:id="@+id/adminEditInstSearchBtn"
            android:background="#266661"
            android:textSize="15sp"
            android:text="찾기"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="음계"
        android:textColor="#215b56"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        android:id="@+id/adminWriteMusic"
        android:textSize="20sp"
        android:background="#ffffff" />
</LinearLayout>
